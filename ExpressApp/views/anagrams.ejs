<!DOCTYPE html>
<html>
<head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css'/>
</head>
<style>

    body {
        background-color: #282729;
        color: #d5d5d5;
    }

    h1 {
        width: 100%;
        text-align: center;
    }
    table {
        border-collapse: collapse;
    }

    table, th, td {
        border: 1px solid #696969;
    }

    th, td {
        padding: 8px;
        text-align: center;
    }

    th {
        font-size: 18px;
        background-color: #3e3d40;
    }

    td {
        font-size: 15px;
        vertical-align: top;
    }
</style>
<body>
<h1>Anagrams</h1>
<table>
    <tr>
        <th>Word</th>
        <th>Count</th>
        <th>Anagrams</th>
    </tr>
    <% data.forEach((anagram) => { %>
        <tr>
            <td>
                <%= anagram[0] %>
            </td>
            <td>
                <%= anagram.length %>
            </td>
            <td>
                <%= anagram.join(', ') %>
            </td>
        </tr>
    <% }); %>
</table>
</body>
</html>
